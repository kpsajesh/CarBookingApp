@page
@model CarBookingApp.Pages.CarModels.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <partial name="_IndexCreateButtonPartial" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarModel[0].Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarModel[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarModel[0].UpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarModel[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarModel[0].UpdatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CarModel)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Make.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedDate)
                </td>
                <td>
                    @await Html.PartialAsync("_IndexButtonsPartial", item.Id)
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_IndexDeleteFormPartial" />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/DeleteIndexOption.js"></script>
}
